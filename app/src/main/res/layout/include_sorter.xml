<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_sort_type"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_sort_asc"/>

    <ImageView
        android:id="@+id/iv_sort_asc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintStart_toEndOf="@id/tv_sort_type"
        app:layout_constraintBottom_toTopOf="@id/iv_sort_dsc"
        app:layout_constraintTop_toTopOf="@id/tv_sort_type"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_sort_dsc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintStart_toEndOf="@id/tv_sort_type"
        app:layout_constraintBottom_toBottomOf="@id/tv_sort_type"
        app:layout_constraintTop_toBottomOf="@id/iv_sort_asc"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>